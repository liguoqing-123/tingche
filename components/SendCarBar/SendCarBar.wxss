/* components/SendCarBar/SendCarBar.wxss */
.send-bar {
  padding: 20rpx;
  color: #666666;
  box-shadow: 0 3rpx 3rpx #e9e9e9;
}

.info {
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #f2f2f2;
}

.bar {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.bottom-bar {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  align-items: center;
  justify-content: flex-end;
}

.options {
  display: flex;
}

.options view {
  color: #FFFFFF;
  padding: 6rpx 20rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.options view:first-child {
  border: 2rpx solid #ba6d61;
  background: #d35849;
}

.options view:last-child {
  border: 2rpx solid #2374ee;
  background: #367ef9;
}
