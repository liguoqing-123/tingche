.container {
  width: 100%;
  height: 100%;
  background-color: #FFF;
}

.title {
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.center {
  height: 40%;
  display: flex;
  justify-content: center;
  align-content: center;
}

.center > input {
  height: 100%;
  padding: 0 20px;
  font-size: 34rpx;
  text-align: center;
}

.sure {
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sure > view {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff5573;
}
.sure > view:first-child {
  color: #333333;
}

.sure > view:hover {
  opacity: .8;
  background-color: #efefef;
}