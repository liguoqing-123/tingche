page {
  height: 100%;
  overflow: hidden;
}
.user-index {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.banner {
  width: 100%;
  position: relative;
}
.banner .user {
  position: absolute;
  top: 50rpx;
  z-index: 99;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.user view:first-of-type {
  font-size: 44rpx;
  color: #ebbd35;
}

.user view {
  margin-top: 20rpx;
  color: #eebf33;
}
.logo {
  width: 100%;
}

.number {
  width: 100%;
  box-shadow: 0 10rpx 10rpx #cccccc;
  margin-bottom: 10rpx;
}

.number-item {
  padding: 20rpx;
  border-bottom: 2rpx solid #f6f6f6;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.number-item:last-child {
  border-bottom: 0;
}

.number-item text {
  font-size: 32rpx;
  color: #f17423;
  font-weight: bold;
}

.getCar {
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-top: 10rpx;
  flex-direction: column;
}

.car-gif  {
  background-color: #FFFFFF;
  width: 100%;
  height: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.car-gif image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}

.car-gif text {
  position: absolute;
  transform: translateY(120rpx);
  color: #666666;
  font-weight: 700;
  font-size: 34rpx;
}

.finished {
  margin-top: 100rpx;
  width: 300rpx;
  height: 120rpx;
  border-radius: 150rpx;
  display: flex;
  font-size: 44rpx;
  justify-content: center;
  align-items: center;
}

.finished:hover {
  opacity: .8;
}

.getCarBtn {
  background-color: #00a0ff;
}

.finished {
  background-color: #34c447;
}

.container {
  background-color: #FFF;
  display: flex;
  flex-direction: column;
  color: #666;
  overflow: hidden;
}

.container > view {
  width: 100%;
}

.container > .input {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.container > .input > input {
  margin-left: 10rpx;
  padding: 0 10rpx;
}

.container > .button {
  height: 100rpx;
  display: flex;
  flex-shrink: 0;
  border-top: 1rpx solid #efefef;
}

.container > .button > text {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container > .button > text:first-child {
  color: #595c5a;
}

.container > .button > text:first-child:hover {
  opacity: .8;
  background-color: #efefef;
}

.container > .button > text:last-child:hover {
  opacity: .8;
  background-color: #efefef;
}

.container > .button > text:last-child {
  color: #ff5573;
}

.errmessage {
  margin-top: 10rpx;
  color: #ff0000;
}